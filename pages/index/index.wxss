/**index.wxss**/
.top {
  position: fixed;
  z-index: 1;
  width: 100%;
  padding: 15rpx 0;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  align-items: center;
  background-color: #62BAE7;
}
.search {
  display: flex;
  flex-direction: row;
  border: 1px solid #999;
  width: 90%;
  height: 60rpx;
  border-radius: 50rpx;
  padding-left: 50rpx;
  align-items: center;
  /* align-self: center; */
  justify-content: space-between;
  padding-right: 20rpx;
  box-sizing: border-box;
  /* margin: 0 auto; */
  background-color: #fff;
  /* margin-top: 15rpx; */
}
.search input {
  /* border: 1px solid blue; */
  width: 85%;
}
.search image {
  width: 50rpx;
  height: 50rpx;
}
.today{
  background-color: #fff;
}
.today-title{
  width: 100%;
  height: 60rpx;
  padding-top: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
}
